@model IEnumerable<Event>

@{
    ViewData["Title"] = "Index";
}
<div class="container pt-3 col">
    <div class="row pt-4">
        <div class="row">
            <div class="col">
                <h3 class="text-primary">Event List</h3>
		    </div>
            <div class="col text-center ">
                <a asp-area = "Admin" asp-controller="Event" asp-action="Create" class="btn btn-outline-primary">
                   <i class="bi bi-plus-circle"></i> Add Event
			    </a>
		    </div>
        </div>
	</div>

    <div class="table-responsive row pt-3">
        <table class="table table-bordered table-striped" style="width:80%">
            <thead class="table-primary">
                <tr>
                    <th>
                        Event Name
			        </th>
                    <th></th>
		        </tr>
	        </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="75%">
                            @obj.Name
				        </td>
                        <td>
                            <div class="w-25 btn-group" role="group">
                                <a asp-area ="Admin" asp-controller="Event" asp-action="Edit" asp-route-eventId="@obj.EventId"
                                class="btn btn-primary mx-1"> <i class="bi bi-pencil-square"></i></a>
                                <a asp-area ="Admin" asp-controller="Event" asp-action="Delete" asp-route-eventId="@obj.EventId" 
                                class="btn btn-danger" ><i class="bi bi-trash-fill"></i></a>
					        </div>
				        </td>
			        </tr>
                }
            </tbody>

        </table>
    </div>
</div>
